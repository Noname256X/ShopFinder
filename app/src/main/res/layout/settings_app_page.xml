                    android:backgroundTint="@color/marketplace_dns">

                    <Button
                        android:id="@+id/dnsButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/marketplace_dns"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/dns_text"
                        android:textColor="@color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/dnsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_citilink">

                    <Button
                        android:id="@+id/CitilinkButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/marketplace_citilink"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/citilink_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/CitilinkSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_m_video">

                    <Button
