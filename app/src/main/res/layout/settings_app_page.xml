                        android:backgroundTint="@color/marketplace_m_video"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/m_video_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/MVideoSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_aliexpress">

                    <Button
                        android:id="@+id/AliexpressButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/marketplace_aliexpress"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/aliexpress_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/AliexpressSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_joom">

                    <Button
                        android:id="@+id/JoomButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/marketplace_joom"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/joom_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/JoomSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_mts_shop">

                    <Button
                        android:id="@+id/Shop_mtsButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/marketplace_mts_shop"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/mts_shop_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/Shop_mtsSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_technopark">

                    <Button
                        android:id="@+id/TechnoparkButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/marketplace_technopark"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/technopark_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/TechnoparkSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/white">

                    <Button
                        android:id="@+id/LamodaButton"
                        android:layout_width="match_parent"
                        android:layout_height="47.62dp"
                        android:backgroundTint="@color/white"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical"
                        android:paddingLeft="19.05dp"
                        android:text="@string/lamoda_text"
                        android:textColor="@color/marketplace_lamoda"
                        android:textSize="16sp"
                        app:cornerRadius="8dp" />

                    <Switch
                        android:id="@+id/LamodaSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

            </LinearLayout>
        </ScrollView>
    </androidx.constraintlayout.widget.ConstraintLayout>

