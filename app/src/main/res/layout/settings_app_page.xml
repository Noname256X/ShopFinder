    <androidx.constraintlayout.widget.ConstraintLayout
        android:id="@+id/quantityBlock"
        android:layout_width="281.52dp"
        android:layout_height="47.62dp"
        android:backgroundTint="@color/additional_color"
        android:background="@drawable/rounded_button_background"
        app:layout_constraintTop_toBottomOf="@+id/centralContainer"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_marginTop="39.62dp"
        tools:visibility="gone">

        <FrameLayout
            android:id="@+id/leftArrowButton"
            android:layout_width="114.29dp"
            android:layout_height="47.62dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@android:color/transparent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_left_icon"
                android:layout_gravity="center"
                android:contentDescription="@string/arrow_left_desc"/>
        </FrameLayout>

        <EditText
            android:id="@+id/pageNumberInput"
            android:layout_width="53.33dp"
            android:layout_height="38.1dp"
            android:background="@drawable/mini_block_field_in_button_settings_app"
            android:gravity="center"
            android:inputType="number"
            android:textSize="18sp"
            android:fontFamily="@font/jost"
            android:text="8"
            android:focusable="false"
            android:cursorVisible="false"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintBottom_toBottomOf="parent"/>

        <FrameLayout
            android:id="@+id/rightArrowButton"
            android:layout_width="114.29dp"
            android:layout_height="47.62dp"
            android:clickable="true"
            android:focusable="true"
            android:foreground="?attr/selectableItemBackground"
            android:background="@android:color/transparent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <ImageView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:src="@drawable/arrow_right_icon"
                android:layout_gravity="center"
                android:contentDescription="@string/arrow_right_desc"/>
        </FrameLayout>

    </androidx.constraintlayout.widget.ConstraintLayout>

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="41.14dp"
        android:width="190.48dp"
        android:height="38.1dp"
        android:backgroundTint="@color/but_gray"
        android:fontFamily="@font/jost"
        android:text="@string/go_back"
        android:textColor="@color/text_field_gray"
        app:cornerRadius="15.24dp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

