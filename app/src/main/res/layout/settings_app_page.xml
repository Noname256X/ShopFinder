                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical|start"
                        android:paddingLeft="19.05dp"
                        android:text="@string/wb_text"
                        android:textColor="@android:color/white"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/wildberriesSwitch"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginRight="10dp"
                        android:thumbTint="@android:color/white" />
                </RelativeLayout>

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="47.62dp"
                    android:layout_marginBottom="9.9dp"
                    android:background="@drawable/rounded_button_background"
                    android:backgroundTint="@color/marketplace_yandex_market">

                    <Button
                        android:id="@+id/YandexMarketButton"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:background="@android:color/transparent"
                        android:fontFamily="@font/jost"
                        android:gravity="center_vertical|start"
                        android:paddingLeft="19.05dp"
                        android:text="@string/yandex_market_text"
                        android:textColor="@android:color/black"
                        android:textSize="16sp" />

                    <Switch
                        android:id="@+id/YandexMarketSwitch"
